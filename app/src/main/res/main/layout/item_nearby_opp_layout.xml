<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_nearby_iv_header"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/head"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="160px"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_nearby_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Gooota"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_common"/>

            <TextView
                android:id="@+id/item_nearby_tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:drawableLeft="@mipmap/list_star"
                android:drawablePadding="4dp"
                tools:text="2.0"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/item_nearby_tv_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="@dimen/text_size_common"
                tools:text="100km"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_nearby_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textColor="@color/common_grey"
            android:textSize="@dimen/text_size_small"
            tools:text="The Gooota The Gooota The "/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            >

            <TextView
                android:id="@+id/item_nearby_tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Booking Contact"
                android:textColor="@color/textAccent"
                android:textSize="@dimen/text_size_common"/>

            <ImageView
                android:id="@+id/item_nearby_iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/item_nearby_tv_contact"
                android:src="@mipmap/list_phone"/>

            <ImageView
                android:id="@+id/item_nearby_iv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/item_nearby_iv_phone"
                android:src="@mipmap/list_email"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_nearby_tv_perform_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_common"
                tools:text="Oct 2st 1:10PM-3:20PM"/>

            <TextView
                android:id="@+id/item_nearby_tv_apply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_double_corner_rect_bg"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="center"
                android:text="APPLY"
                android:textColor="@color/textAccent"
                android:textSize="@dimen/text_size_common"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>