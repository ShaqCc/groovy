<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/schedule_ll_time_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingRight="10dp"
            android:paddingTop="16dp"
            android:src="@mipmap/icon_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEEK:DEC 13-19"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="10dp"
            android:paddingTop="16dp"
            android:src="@mipmap/icon_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule_ll_time_control"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_mon">

            <TextView
                style="@style/common_white_text_style"
                android:layout_centerHorizontal="true"
                android:text="MON" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_circle_grey_solid_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_add" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_mon">

            <TextView
                style="@style/common_white_text_style"
                android:layout_centerHorizontal="true"
                android:text="MON" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_circle_grey_solid_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_add" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_mon">

            <TextView
                style="@style/common_white_text_style"
                android:layout_centerHorizontal="true"
                android:text="MON" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_circle_grey_solid_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_add" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_mon">

            <TextView
                style="@style/common_white_text_style"
                android:layout_centerHorizontal="true"
                android:text="MON" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_circle_grey_solid_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_add" />
        </RelativeLayout>
    </LinearLayout>

    <com.bunny.groovy.weidget.MoveLayout
        android:id="@+id/moveLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="#232323">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/icon_shrink" />
        </FrameLayout>

        <TextView
            android:id="@+id/schedule_tv_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="13dp"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            android:text="SHOW LIST ON MON"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/schedule_tv_empty"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/next_show_default_info"
                android:textColor="@color/common_grey"
                android:textSize="13sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>

    </com.bunny.groovy.weidget.MoveLayout>
</RelativeLayout>