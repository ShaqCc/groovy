<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_hone" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/musician_pan" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release Show"
                android:textColor="@color/white"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="50dp"
                android:drawableTop="@mipmap/icon_home_one"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore Show\nOpportunity"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="100dp"
                android:layout_marginRight="50dp"
                android:drawableTop="@mipmap/icon_home_two"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:layout_gravity="center|bottom"
                android:textColor="@color/white"
                android:layout_marginBottom="50dp"
                android:drawableTop="@mipmap/icon_home_three"
                android:textSize="13sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/white"
                android:text="NEXT SCHEDULED SHOW"/>
            <include layout="@layout/include_recent_show_layout"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>