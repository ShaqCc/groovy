<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_hone"/>
        <FrameLayout
            android:id="@+id/overview_fl_pan"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/musician_pan">


            <TextView
                android:id="@+id/overview_tv_release_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x46"
                android:layout_marginTop="@dimen/x84"
                android:drawableTop="@mipmap/icon_home_one"
                android:text="Release Show"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_common"/>

            <TextView
                android:id="@+id/overview_tv_explore_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/x46"
                android:layout_marginTop="@dimen/x84"
                android:drawableTop="@mipmap/icon_home_two"
                android:gravity="center"
                android:text="Explore Show\nOpportunity"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_common"/>

            <TextView
                android:id="@+id/overview_tv_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="@dimen/x46"
                android:drawableTop="@mipmap/icon_home_three"
                android:text="Notifications"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_common"/>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="NEXT SCHEDULED SHOW"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/next_show_default_info"
                    android:textColor="@color/common_grey"
                    android:textSize="@dimen/text_size_common"/>

                <include
                    android:id="@+id/nextshow_layout"
                    layout="@layout/include_recent_show_layout"/>
            </FrameLayout>

        </LinearLayout>
    </RelativeLayout>

