<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp">

    <ImageView
        android:id="@+id/nextshow_iv_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/venue_instead_pic" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <com.bunny.groovy.weidget.HeightLightTextView
                android:id="@+id/nextshow_tv_performerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="11"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_common"
                tools:text="The ShowThe Show" />

            <TextView
                android:id="@+id/nextshow_tv_performerStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@mipmap/list_star"
                android:drawablePadding="4dp"
                android:text="4.1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/nextshow_tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Verification"
                android:textColor="@color/common_grey"
                android:textSize="9sp"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/nextshow_tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Rodl.Ino"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nextshow_tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Oct 1st 3:00PM-4:PM"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_common" />

            <ImageView
                android:id="@+id/nextshow_iv_edit"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_dian" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>