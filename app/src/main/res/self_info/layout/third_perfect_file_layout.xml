<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_circle_stroke_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="1"/>
        <View style="@style/tranverse_line"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_circle_stroke_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="2"/>
        <View style="@style/tranverse_line"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_blue_circle_solid_bg"
            android:text="3"
            android:gravity="center"
            android:textColor="@color/white"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/tell_us"/>


    <com.xw.repo.XEditText
        android:id="@+id/et_facebook"
        style="@style/base_edit_text_style"
        android:drawableLeft="@mipmap/login_facebook"
        android:layout_marginTop="20dp"
        android:hint="@string/facebook"
        android:drawablePadding="4dp"
        app:x_disableEmoji="true" />
    <com.xw.repo.XEditText
        android:id="@+id/et_twitter"
        style="@style/base_edit_text_style"
        android:drawablePadding="4dp"
        android:layout_marginTop="10dp"
        android:hint="@string/twitter"
        android:drawableLeft="@mipmap/icon_twiter"
        app:x_disableEmoji="true" />
    <com.xw.repo.XEditText
        android:id="@+id/et_soundcloud"
        android:drawablePadding="4dp"
        style="@style/base_edit_text_style"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/icon_soundcloud"
        android:hint="@string/sound_cloud"
        app:x_disableEmoji="true" />


    <TextView
        android:id="@+id/tv_go"
        style="@style/role_selected_text_style"
        android:layout_marginTop="30dp"
        android:text="GO!" />

</LinearLayout>